<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    RewriteBase /
    RewriteRule ^index\.php$ - [L]
    
    # Blog clean URLs
    RewriteRule ^blog/?$ blog/index.php [L,QSA]
    RewriteRule ^blog/(.*)$ blog/index.php?slug=$1 [L,QSA]
    
    # Shop clean URLs
    RewriteRule ^shop/?$ shop/index.php [L,QSA]
    
    # Handle /products (alias for shop)
    RewriteRule ^products/?$ shop/index.php [L,QSA]
    
    # Handle /product (product listing)
    RewriteRule ^product/?$ index.php [L,QSA]
    
    # Handle /product/{slug} (single product)
    # Product clean URLs
RewriteRule ^product/(.*)$ product/index.php?slug=$1 [L,QSA]

    # Projects clean URLs
    RewriteRule ^projects/?$ projects/index.php [L,QSA]
    RewriteRule ^project/(.*)$ project/index.php?slug=$1 [L,QSA]

    # Handle regular pages - only if file/directory doesn't exist
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.php [L]
</IfModule>

# Protect .env and other hidden files (except .well-known)
<FilesMatch "^\.(?!well-known).*">
    Require all denied
</FilesMatch>

# Prevent directory listing
Options -Indexes

# Set default charset
AddDefaultCharset UTF-8
